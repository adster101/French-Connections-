<?xml version="1.0" encoding="UTF-8"?>
<form>
  <fieldset name="enquiry" addrulepath="/components/com_accommodation/models/rules" label="">
    <field 
      name="forename"
      type="text"
      id="first-name"
      class="validate-name input-small"
      description="COM_ACCOMMODATION_ENQUIRY_FIRST_NAME_DESC"
      label="COM_ACCOMMODATION_ENQUIRY_FIRST_NAME_LABEL"
      filter="string"
      required="true"
      maxlength="20"
      labelclass="control-label"
      message="COM_ACCOMMODATION_ENQUIRY_FIRST_NAME_VALIDATION_MESSAGE"
      validate="name"
		/>
    
    <field 
      name="surname"
      type="text"
      id="last-name"
      class="validate-name input-small"
      description="COM_ACCOMMODATION_ENQUIRY_LAST_NAME_DESC"
      label="COM_ACCOMMODATION_ENQUIRY_LAST_NAME_LABEL"
      filter="string"
      required="true"
      maxlength="20"
      labelclass="control-label"
      message="COM_ACCOMMODATION_ENQUIRY_LAST_NAME_VALIDATION_MESSAGE"
      validate="name"
    />   
    
    <field 
      name="email"
      type="email"
      maxlength="75"
      description="COM_ACCOMMODATION_ENQUIRY_EMAIL_TEXT_DESC"
      label="COM_ACCOMMODATION_ENQUIRY_EMAIL_TEXT_LABEL"
      filter="string"
      required="true"
      labelclass="control-label"
      message="COM_ACCOMMODATION_ENQUIRY_EMAIL_VALIDATION_MESSAGE"
		/>
    
    <field 
      name="phone"
      type="text"
      id="guest-telephone"
      class="validate-telephone input-medium"
      maxlength="20"
      description="COM_ACCOMMODATION_ENQUIRY_TELEPHONE_DESC"
      label="COM_ACCOMMODATION_ENQUIRY_TELEPHONE_LABEL"
      message="COM_ACCOMMODATION_ENQUIRY_TELEPHONE_VALIDATION_MESSAGE"
      filter="ALNUM"
      validate="telephone"
      required="true"
      labelclass="control-label"
    />
      
    <field 
      name="message"
      type="textarea"
      id="review-text"
      row="8"
      class="validate-message input-xlarge"
      cols="8"
      description="COM_ACCOMMODATION_ENQUIRY_MESSAGE_DESC"
      label="COM_ACCOMMODATION_ENQUIRY_MESSAGE_LABEL"
      filter="htmlsafe"
      validate="message"
      required="required"
      message="COM_ACCOMMODATION_ENQUIRY_MESSAGE_VALIDATION_MESSAGE"
      labelclass="control-label"
		/>
    
    <field name="start_date"
      type="text"
      id="start_date"
      class="validate-ukdate input-small start_date"
      description="COM_ACCOMMODATION_ENQUIRY_START_DATE_DESC"
      label="COM_ACCOMMODATION_ENQUIRY_START_DATE_LABEL"
      filter="string"
      validate="date"
      required="true"
      message="COM_ACCOMMODATION_ENQUIRY_START_DATE_VALIDATION_MESSAGE"
      labelclass="control-label"
    />
    
    <field name="end_date"
      type="text"
      id="end_date"
      class="validate-ukdate input-small end_date"
      description="COM_ACCOMMODATION_ENQUIRY_END_DATE_DESC"
      label="COM_ACCOMMODATION_ENQUIRY_END_DATE_LABEL"
      filter="string"
      validate="date"
      required="true"
      message="COM_ACCOMMODATION_ENQUIRY_END_DATE_VALIDATION_MESSAGE"
      labelclass="control-label"
    />  
 
    <field 
      name="adults"
      type="text"
      id="enquiry-adults"
      class="validate-numeric input-mini"
      maxlength="2"
      description="COM_ACCOMMODATION_ENQUIRY_ADULTS_DESC"
      label="COM_ACCOMMODATION_ENQUIRY_ADULTS_LABEL"
      filter="integer"
      labelclass="control-label"
      validate="adults"
    /> 
    
    <field 
      name="children"
      type="text"
      id="enquiry-children"
      class="validate-numeric input-mini"
      maxlength="2"
      description="COM_ACCOMMODATION_ENQUIRY_CHILDREN_DESC"
      label="COM_ACCOMMODATION_ENQUIRY_CHILDREN_LABEL"
      filter="integer"
      labelclass="control-label"
      validate="adults"
    /> 
    <field
      name="captcha"
      type="captcha"
      label="COM_ACCOMMODATION_CAPTCHA_LABEL"
      description="COM_ACCOMMODATION_CAPTCHA_DESC"
      validate="captcha"
      labelclass="control-label"
    />    
    <field 
      name="property_id" 
      type="hidden" 
      filter="int" 
    />  
    <field 
      name="unit_id" 
      type="hidden" 
      filter="int" 
    />    

    
  </fieldset>

</form>