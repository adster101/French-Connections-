<?xml version="1.0" encoding="UTF-8"?>
<form >
  <fieldset 
    name="register" 
    label="">
  <field 
      name="firstname" 
      type="text"
      description="COM_USERS_REGISTER_FIRST_NAME_DESC"
      filter="string"
      label="COM_USERS_REGISTER_FIRST_NAME_DESC"
      required="true"
      size="30"
      labelclass="control-label"
    />
    <field 
      name="surname" 
      type="text"
      description="COM_USERS_REGISTER_SURNAME_DESC"
      filter="string"
      label="COM_USERS_REGISTER_SURNAME_DESC"
      required="true"
      size="30"
      labelclass="control-label"
    />
    <field 
      name="username" 
      type="text"
      class="validate-username"
      description="COM_USERS_DESIRED_USERNAME"
      filter="username"
      label="COM_USERS_REGISTER_USERNAME_LABEL"
      message="COM_USERS_REGISTER_USERNAME_MESSAGE"
      required="true"
      size="30"
      validate="username"
      labelclass="control-label"
    />
    <field 
      name="email1" 
      type="email"
      description="COM_USERS_REGISTER_EMAIL1_DESC"
      field="id"
      filter="string"
      label="COM_USERS_REGISTER_EMAIL1_LABEL"
      message="COM_USERS_REGISTER_EMAIL1_MESSAGE"
      required="true"
      size="30"
      unique="true"
      validate="email"
      labelclass="control-label"
    />
    <field 
      name="email2" 
      type="email"
      description="COM_USERS_REGISTER_EMAIL2_DESC"
      field="email1"
      filter="string"
      label="COM_USERS_REGISTER_EMAIL2_LABEL"
      message="COM_USERS_REGISTER_EMAIL2_MESSAGE"
      required="true"
      size="30"
      validate="equals"
      labelclass="control-label"
    />
    <field 
      name="dialling_code"
      type="diallingcodes"
      required="true"
      filter="string"
      
    />
    <field
      name="phone_1"
      type="tel"
      id="phone_1"
      description="COM_USERS_REGISTER_PHONE_DESCRIPTION"
      filter="string"
      label="COM_USERS_REGISTER_PHONE_LABEL"
      message="COM_USERS_REGISTER_PHONE_MESSAGE"
      size="30"
      required="true"
      labelclass="control-label"
    />
    <field
      name="where_heard"
      type="list"
      id="where_heard"
      description="PLG_USER_PROFILE_FIELD_WHERE_HEARD_DESC"
      filter="string"
      required="true"
      label="PLG_USER_PROFILE_FIELD_WHERE_HEARD_LABEL"
      labelclass="control-label"
      message="PLG_USER_PROFILE_FIELD_WHERE_HEARD_MESSAGE">
      <option	value="">JGLOBAL_SELECT_AN_OPTION</option>
      <option	value="WHERE_HEARD_GOOGLE">WHERE_HEARD_SEARCH_ENGINE</option>
      <option	value="WHERE_HEARD_FRIEND">WHERE_HEARD_USED_BEFORE</option>
      <option	value="WHERE_HEARD_FRIEND">WHERE_HEARD_NEWSPAPER</option>
      <option	value="WHERE_HEARD_FRIEND">WHERE_HEARD_MAGAZINE</option>
      <option	value="WHERE_HEARD_FRIEND">WHERE_HEARD_RECCOMMENDATION</option>
    </field>
    <field
      name="captcha"
      type="captcha"
      label="COM_USERS_CAPTCHA_LABEL"
      description="COM_USERS_CAPTCHA_DESC"
      validate="captcha"
      labelclass="control-label"
    />
    </fieldset>
  
  
</form>