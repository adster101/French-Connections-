    name="resetpassword" 
    label="">
    
    <field
      name="note"
      type="note"
      label="COM_REGISTEROWNER_RESET_PASSWORD_NOTE_HEADING"
      description="COM_REGISTEROWNER_RESET_PASSWORD_NOTE"
      class="alert bg-info"
    />
      
    <field 
      name="email" 
      type="email"
      description="COM_USERS_REGISTER_EMAIL1_DESC"
      field="id"
      hint="COM_REGISTEROWNER_YOUR_REGISTERED_EMAIL"
      filter="string"
