<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset 
    name="snooze"
    label="COM_RENTAL_SNOOZE_SNOOZE_DATE">
    <field
      name="snooze_until"
      type="calendar"
      format="%d-%m-%Y"
      label="COM_RENTAL_SNOOZE_SNOOZE_DATE"
      filter="string">
    </field>
  </fieldset>
  <fieldset 
    name="change-owner"
    label="COM_RENTAL_CHANGE_OWNER">
    <field
      name="created_by"
      label="COM_RENTAL_FIELD_PROPERTY_CREATED_BY_LABEL"
      type="user"
      filter="int">
    </field>
  </fieldset>
  <fieldset 
    name="update-expiry-date"
    label="COM_RENTAL_UPDATE_DATE_LAPSED" >
    <field
      name="expiry_date"
      type="calendar"
      format="%d-%m-%Y"
      label="COM_RENTAL_HELLOWORLD_HEADING_DATE_EXPIRY"
      filter="string">
    </field>
  </fieldset>
  <fieldset 
    name="non-renewal-reason"
    label="COM_RENTAL_UPDATE_NON_RENEWAL_REASON">
    <field
      name="renewalreason"
      type="list"
      label="COM_RENTAL_UPDATE_NON_RENEWAL_REASONS"
      filter="string">
      <option value="">JSELECT</option>
      <option value="NO_FEEDBACK">COM_RENTAL_UPDATE_NON_RENEWAL_REASON_NO_FEEDBACK</option>
      <option value="SOLD">COM_RENTAL_UPDATE_NON_RENEWAL_REASON_SOLD</option>
      <option value="COMPETITOR">COM_RENTAL_UPDATE_NON_RENEWAL_REASON_COMPETITOR</option>
      <option value="LOW_ENQUIRIES">COM_RENTAL_UPDATE_NON_RENEWAL_REASON_LOW_ENQUIRIES</option>
      <option value="LOW_ENQUIRIES">COM_RENTAL_UPDATE_NON_RENEWAL_REASON_LOW_PERCEIVED</option>
      <option value="STOPPED_LETTING">COM_RENTAL_UPDATE_NON_RENEWAL_REASON_STOPPED_LETTING</option>
      <option value="NO_REASON">COM_RENTAL_UPDATE_NON_RENEWAL_REASON_NO_REASON</option>
      <option value="TOO_EXPENSIVE">COM_RENTAL_UPDATE_NON_RENEWAL_REASON_TOO_EXPENSIVE</option>
      <option value="RENNOVATING">COM_RENTAL_UPDATE_NON_RENEWAL_REASON_RENNOVATING</option>
      <option value="FULLY_BOOKED">COM_RENTAL_UPDATE_NON_RENEWAL_REASON_FULLY_BOOKED</option>
      <option value="CANNOT_CONTACT">COM_RENTAL_UPDATE_NON_RENEWAL_REASON_CANNOT_CONTACT</option>
      <option value="WEBSITE_ISSUES">COM_RENTAL_UPDATE_NON_RENEWAL_REASON_WESITE_ISSUES</option>
      <option value="OTHER">COM_RENTAL_UPDATE_NON_RENEWAL_REASON_OTHER</option>
    </field>
      
   
    
  </fieldset>
  <fieldset 
    name="review-status"
    label="COM_RENTAL_UPDATE_PAYMENT_STATUS">
    <field
      name="review"
      type="list"
      label="COM_RENTAL_UPDATE_PAYMENT_STATUS_LABEL"
      filter="string">
      <option value="">JSELECT</option>
      <option value="2">COM_RENTAL_UPDATE_REVIEW_STATUS_PAYMENT_RECEIVED</option>
    </field>
    <field 
      name="value"
      type="text"
      label="COM_RENTAL_UPDATE_PAYMENT_STATUS_VALUE_LABEL"
      filter="int"
      default=""
    />     
  </fieldset>
  <fieldset
    name="note"
    label="COM_RENTAL_HELLOWORLD_ADD_NOTE">
    <field 
      name="subject"
      type="input"
      label="Note subject"
      class="input"
      filter="string"
      required="true">
    </field>
    <field 
      name="body"
      type="textarea"
      label="COM_RENTAL_SNOOZE_CONTACT_NOTES"
      description ="COM_RENTAL_IMAGES_EDIT_CAPTION_IMAGE_DESC"      
      class="input-xlarge"
      filter="string">
    </field>
  </fieldset>
  <field 
    name="id"
    type="hidden"
    filter="int"
  />
</form>