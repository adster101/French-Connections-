<?xml version="1.0" encoding="utf-8"?>
<form 
  addrulepath="/libraries/frenchconnections/forms/rules"
  addfieldpath="/libraries/frenchconnections/forms/fields">

  <fieldset 
    name="card-details" 
    label="COM_RENTAL_HELLOWORLD_PAYMENT_CARD_DETAILS_LEGEND" 
    description="COM_RENTAL_HELLOWORLD_PAYMENT_BLURB">

    <field
      type="spacer"
      showrule="true"/>
    <field
      name="CardType"
      type="list"
      required="true"
      filter="string"
      class="required"
      default=""
      labelclass="control-label"
      label="COM_RENTAL_HELLOWORLD_PAYMENT_CARD_TYPE">
      <option value="">COM_RENTAL_PLEASE_CHOOSE</option>
      <option value="VISA">Visa </option>
      <option value="DELTA">Visa Debit</option>
      <option value="UKE">Visa Electron</option>
      <option value="MC">Master Card</option>
      <option value="SOLO">Solo</option>
      <option value="MAESTRO">Maestro</option>
    </field>

    <field
      name="CardNumber"
      type="text"
      required="true"
      filter="string"
      class="required"
      labelclass="control-label"
      label="COM_RENTAL_HELLOWORLD_CARD_NUMBER"
      maxlength="24"
      size="25"
      default=""
    />

    <field
      name="CardHolder"
      type="text"
      class="required"
      id="CardHolder"
      description="PLG_USER_PROFILE_FIELD_NAME_DESC"
      filter="string"
      label="PLG_USER_PROFILE_FIELD_NAME_LABEL"
      message="PLG_USER_PROFILE_FIELD_NAME_MESSAGE"
      size="30"
      labelclass="control-label"
      required="true"
      default=""
    />

    <field
      name="CardStartDate"
      type="text"
      class="input-mini"
      size="5"
      maxlength="4"
      labelclass="control-label"
      required="false"
      default=""
      filter="string"
      label="COM_RENTAL_HELLOWORLD_CARD_START_DATE"
    />

    <field
      name="CardExpiryDate"
      type="text"
      class="input-mini"
      size="5"
      maxlength="4"
      labelclass="control-label"
      required="true"
      default=""
      label="COM_RENTAL_HELLOWORLD_CARD_EXPIRY_DATE"
      filter="string"
    />
    <field
      name="IssueNumber"
      type="text"
      filter="int"
      required="false"
      label="COM_RENTAL_HELLOWORLD_CARD_ISSUE_NUMBER"
      maxlength="2"
      size="2"
      class="input-mini"
      labelclass="control-label"
    />
    <field
      name="CV2"
      type="text"
      filter="string"
      required="true"
      label="COM_RENTAL_HELLOWORLD_CARD_CV2"
      maxlength="3"
      size="3"
      class="input-mini"
      labelclass="control-label"
      default=""
    />
    <field 
      name="autorenewal" 
      type="checkbox"
      label="COM_RENTAL_PAYMENT_AUTO_RENEWAL"
      default=""
      required="false"
      labelclass="control-label"
      filter="int"
    />
  </fieldset>

  <fieldset 
    name="billing-details"
    id="billing"
    label="COM_RENTAL_HELLOWORLD_PAYMENT_BILLING_DETAILS_LEGEND" 
    description="">
    
    <field 
      name="use_invoice_address" 
      type="checkbox"
      label="COM_RENTAL_BILLING_ADDRESS_SAME_AS_INVOICE"
      required="false"
      labelclass="control-label"
      filter="unset"
      validate="nonzero"
    />
    
    <field
      name="BillingFirstnames"
      type="text"
      class="input-xlarge"
      id="BillingFirstnames"
      description=""
      filter="string"
      label="COM_RENTAL_HELLOWORLD_CARD_BILLING_FIRST_NAME"
      message=""
      size="30"
      required="true"
      labelclass="control-label"
      default=""
    />
    <field
      name="BillingSurname"
      type="text"
      class="input-xlarge"
      id="BillingSurname"
      description=""
      filter="string"
      label="COM_RENTAL_HELLOWORLD_CARD_BILLING_SURNAME"
      message=""
      size="30"
      default=""
      required="true"
      labelclass="control-label"
    />
    
    <field
      name="BillingAddress1"
      type="text"
      default=""
      class="input-xlarge"
      id="BillingAddress1"
      description="PLG_USER_PROFILE_FIELD_ADDRESS1_DESC"
      filter="string"
      label="PLG_USER_PROFILE_FIELD_ADDRESS1_LABEL"
      message="PLG_USER_PROFILE_FIELD_ADDRESS1_MESSAGE"
      size="30"
      required="true"
      labelclass="control-label"
    />
    
    <field
      name="BillingAddress2"
      type="text"
      class="input-xlarge"
      id="BillingAddress2"
      description="PLG_USER_PROFILE_FIELD_ADDRESS2_DESC"
      filter="string"
      label="PLG_USER_PROFILE_FIELD_ADDRESS2_LABEL"
      message="PLG_USER_PROFILE_FIELD_ADDRESS2_MESSAGE"
      size="30"
      labelclass="control-label"
    />

    <field
      name="BillingCity"
      type="text"
      id="BillingCity"
      default=""
      description="PLG_USER_PROFILE_FIELD_CITY_DESC"
      filter="string"
      label="PLG_USER_PROFILE_FIELD_CITY_LABEL"
      message="PLG_USER_PROFILE_FIELD_CITY_MESSAGE"
      size="30"
      labelclass="control-label"
      required="true"
    />

    <field
      name="BillingPostCode"
      type="text"
      id="BillingPostCode"
      default=""
      description="PLG_USER_PROFILE_FIELD_POSTAL_CODE_DESC"
      filter="string"
      label="PLG_USER_PROFILE_FIELD_POSTAL_CODE_LABEL"
      message="PLG_USER_PROFILE_FIELD_POSTAL_CODE_MESSAGE"
      size="30"
      labelclass="control-label"
      required="true"
      class="input-small"
    />
    
    <field 
      type="string"
      name="BillingEmailAddress"
      filter="string"
      maxlength="75"
      required="true"
      default=""
      class="input-medium"
      labelclass="control-label"
      label="PLG_USER_PROFILE_FIELD_EMAIL_LABEL"
      message="PLG_USER_PROFILE_FIELD_EMAIL_MESSAGE"            
      description="PLG_USER_PROFILE_FIELD_EMAIL_DESC"
    />
        
    <field
      name="BillingCountry"
      type="country"
      required="true"
      filter="string"
      labelclass="control-label"
      label="COM_RENTAL_HELLOWORLD_PAYMENT_BILLING_COUNTRY"
      default="">  
      <option value="">Please select...</option>
    </field>    
    <field
      name="state"
      type="state"
      default=""
      description="PLG_USER_PROFILE_FIELD_REGION_DESC"
      filter="string"
      label="PLG_USER_PROFILE_FIELD_REGION_LABEL"
      message="PLG_USER_PROFILE_FIELD_REGION_MESSAGE"
      labelclass="control-label"
      required="false"
    />
  </fieldset>

  <field 
    name="tsandcs" 
    type="checkbox"
    label="COM_RENTAL_PAYMENT_AGREE_TO_TSANDCS"
    required="true"
    labelclass="control-label"
    filter="int"
    validate="nonzero"
  />   
  
  <field
    type="hidden"
    filter="int"
    name="id" />
</form>