<?xml version="1.0" encoding="utf-8"?>
<form>  

  <fields name="filter"> 
    <fieldset addfieldpath="/libraries/frenchconnections/form/fields" >
      <field
        name="search"
        type="text"
        label="JSEARCH_FILTER"
        hint="COM_STATS_FILTER_PROPERTY"
      />
        
      <field
        name="id"
        type="property"
        label="COM_STATS_FILTER_PROPERTY"
        description="COM_STATS_FILTER_PROPERTY_DESC"
        class="input-medium"
        onchange="this.form.submit();">
        <option value="">JSELECT</option>
      </field>
    
      <field
        name="start_date"
        type="text"
        label="Date from: "
        description="COM_STATS_FILTER_DATE_RANGE_DESC"
        hint="dd-mm-yyyy"
        class="start_date input-small"
        filter="int"
        validate="date" 
      />
  
      <field
        name="end_date"
        type="text"
        label="Date to: "
        description="COM_STATS_FILTER_DATE_RANGE_DESC"
        hint="dd-mm-yyyy"
        validate="date"
        class="end_date input-small" 
      />   
    </fieldset>

  </fields> 

</form>