<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset
    name="voucher">
    
    <field 
      name="item_cost_id"
      type="sql"
      query="select code as id, description from #__item_costs where (catid in (66,50) OR description like '%featured%') order by catid, id asc"
      labelclass="control-label"
      label="Item code"
      required="true"
      class="input-xlarge"
      filter="string"
      value_field="description"
      key_field="id"
      default=""
    />
    
    <field
      name="property_id"
      type="text"
      labelclass="control-label"
      label="COM_VOUCHERS_PROPERTY_ID"
      required="true"
      class="input-small"
      filter="int"
      default=""
    />
    
    <field 
      type="integer"
      default="1"
      label="Quantity"
      first="1"
      last="10"
      step="1"
      name="quantity"
      class="input-mini"
      labelclass="control-label"
    />
    <field
      type="text"
      default=""
      name="note"
      label="COM_VOUCHERS_VOUCHER_NOTE"
      filter="string"
      labelclass="control-label"
      class="input-xxlarge"
    />
    
    <field
      format="%d-%m-%Y" 
      labelclass="control-label"
      name="end_date" 
      type="calendar"
      label="Expires"
      description=""
      required="false"
      class="input-small"
      filter="string" 
      default=""
    />
    <field 
      name="date_created" 
      type="calendar"
      format="%d-%m-%y"
      labelclass="control-label"
      class="input-large"
      label="Date created"
      description=""
      readonly="true"
      filter="string"
    />
    <field 
      name="date_redeemed" 
      type="calendar"
      format="%d-%m-%y"
      labelclass="control-label"
      class="input-large"
      label="Date redeemed"
      readonly="true"
      filter="string"
    />

    <field 
      name="created_by" 
      type="user"
      label="JGLOBAL_FIELD_CREATED_BY_ALIAS_LABEL"
      labelclass="control-label"
      description=""
      class="input-small"
      filter="int" 
      readonly="true"
    />
    
    <field
      name="id"
      type="hidden"
      filter="int"
    />
    
  </fieldset>

</form>
