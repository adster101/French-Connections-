<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset
    name="voucher">
    
    <field 
      name="item_cost_id"
      type="sql"
      query="select code as id, description from #__item_costs where catid in (66,50) order by catid, id asc"
      labelClass="control-label"
      label="Item code"
      required="true"
      class="input-xlarge"
      filter="string"
      value_field="description"
      key_field="id"
      default=""
    />
    
    <field
      name="property_id"
      type="text"
      labelClass="control-label"
      label="COM_INVOICES_FORM_LBL_INVOICE_PROPERTY_ID"
      description="COM_INVOICES_FORM_DESC_INVOICE_PROPERTY_ID"
      required="true"
      class="input-small"
      filter="int"
      default=""
    />
    
    <field 
      type="integer"
      default="1"
      label="Quantity"
      first="1"
      last="10"
      step="1"
      name="quantity"
      class="input-mini"
      labelClass="control-label"
    />
    
    <field 
      labelClass="control-label"
      name="end_date" 
      type="calendar"
      label="Expires"
      description=""
      required="false"
      class="input-mini"
      filter="string" 
    />
    <field 
      name="date_created" 
      type="text" 
      labelClass="control-label"
      class="input-large"
      label="Date created"
      description=""
      readonly="true"
      filter="string"
    />
    <field 
      name="date_redeemed" 
      type="text" 
      labelClass="control-label"
      class="input-large"
      label="Date redeemed"
      readonly="true"
      filter="string"
    />

    <field 
      name="created_by" 
      type="user"
      label="JGLOBAL_FIELD_CREATED_BY_ALIAS_LABEL"
      labelClass="control-label"
      description=""
      class="input-small"
      filter="int" 
      readonly="true"
    />
    
    <field
      name="id"
      type="hidden"
      filter="int"
      default=""
      label="COM_INVOICES_FORM_LBL_INVOICE_ID"
      class="readonly input-mini"
      labelClass="control-label"
      description="JGLOBAL_FIELD_ID_DESC"
    />
    
  </fieldset>

</form>
