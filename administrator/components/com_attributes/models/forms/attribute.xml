    addFieldPath="/administrator/components/com_attributes/models/fields"
    name="classification">
	      
    <field
			name="id"
			type="text"
      readonly="true"
      class="readonly"
			default="0"
      label="COM_CLASSIFICATION_FIELD_CLASSIFICATION_ID_LABEL"
      description="COM_CLASSIFICATION_FIELD_CLASSIFICATION_ID_DESC"
      filter="int"
    />

    <field
			name="title"
			type="text"
			default=""
			label="COM_CLASSIFICATION_FIELD_CLASSIFICATION_TITLE_LABEL"
			description ="COM_CLASSIFICATION_FIELD_CLASSIFICATION_TITLE_DESC"
      maxlength="50"
      size="30"
      required="true"
      class="inputbox"
      filter="string"
    /> 

      
	</fieldset>	  
	
