<?xml version="1.0" encoding="UTF-8"?>
<form>
  <fieldset 
    name="specialoffer" 
    addrulepath="/administrator/components/com_specialoffers/models/rules" 
    addfieldpath="/administrator/components/com_specialoffers/models/fields" 
    label="">
    <field 
      name="unit_id" 
      type="UserProperties" 
      filter="int"
      description="COM_SPECIALOFFERS_PROPERTY_ID_DESC"
      label="COM_SPECIALOFFERS_PROPERTY_ID_LABEL"
      default=""
      required="true"
      message="COM_SPECIALOFFERS_PROPERTY_ID_VALIDATION_MESSAGE"
      labelclass="control-label"
      class="required validate-prn">
      <option value="">JGLOBAL_SELECT_AN_OPTION</option>
    </field>
    <field 
      name="title"
      type="text"
      id="offer-title"
      description="COM_SPECIALOFFERS_TITLE_DESC"
      label="COM_SPECIALOFFERS_TITLE_LABEL"
      filter="string"
      required="true"
      maxlength="50"
      class="required validate-title input-xxlarge"
      validate="title"
      labelclass="control-label"
      hint="COM_SPECIALOFFERS_TITLE_PLACEHOLDER"
    />
    <field 
      name="description"
      type="textarea"
      id="offer-description"
      description="COM_SPECIALOFFERS_DESCRIPTION_DESC"
      label="COM_SPECIALOFFERS_DESCRIPTION_LABEL"
      filter="safehtml"
      validate="description"
      required="true"
      maxlength="150"
      class="required validate-description"
      labelclass="control-label"
      hint="COM_SPECIALOFFERS_DESCRIPTION_PLACEHOLDER"
    />
    <field 
      name="published" 
      type="list" 
      label="JSTATUS"
      description="JFIELD_PUBLISHED_DESC" 
      class="input-medium"
      filter="intval" 
      size="1" 
      default="0" 
      required="true"
      labelclass="control-label">
      <option value="">JSELECT</option>
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
    </field>
    <field 
      name="start_date"
      type="text"
      id="start-date"
      class="input-small start_date"
      description="COM_SPECIALOFFERS_START_DATE_DESC"
      label="COM_SPECIALOFFERS_START_DATE_LABEL"
      filter="string"
      hint="dd-mm-yyyy"
      validate="twoweeks"
      field="end_date"
      required="true"
      message="COM_SPECIALOFFERS_START_DATE_VALIDATION_MESSAGE"
      labelclass="control-label"
    />
    <field 
      name="end_date"
      type="text"
      id="end-date"
      class="input-small end_date"
      description="COM_SPECIALOFFERS_END_DATE_DESC"
      label="COM_SPECIALOFFERS_END_DATE_LABEL"
      filter="string"
      validate="date"
      hint="dd-mm-yyyy"
      required="true"
      message="COM_SPECIALOFFERS_END_DATE_VALIDATION_MESSAGE"
      labelclass="control-label"           
    />
    <field 
      name="id"
      type="text"
      filter="int"
      readonly="true"
      label="COM_SPECIALOFFERS_ID_LABEL"
      labelclass="control-label" 
    />
    <field 
      name="approved_by"
      type="user"
      filter="unset"
      readonly="true"
      label="COM_SPECIALOFFERS_APPROVED_BY_LABEL"
      labelclass="control-label" 
    />   
    <field 
      name="approved_date"
      type="calendar"
      format="%d-%m-%Y"
      filter="unset"
      readonly="true"
      label="COM_SPECIALOFFERS_APPROVED_DATE_LABEL"
      labelclass="control-label" 
      class="input-small"
    />   
  </fieldset>
</form>