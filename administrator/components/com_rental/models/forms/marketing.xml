      label="COM_RENTAL_MARKETING_LONG_WINTER_LET"
      class="input checkbox"
      labelclass="control-label"
      filter="int">
    </field>
  </fieldset>
  
  <fieldset name="hidden">
    <field
      name="property_id"
      type="hidden"
      filter="int"
    />
    <field
      name="id"
      type="hidden"
      filter="int"
    />
    <field
      name="published"
      type="hidden"
      filter="unset"/>
