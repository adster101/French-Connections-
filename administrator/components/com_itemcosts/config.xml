<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="component"
		label="COM_ITEMCOSTS_COMPONENT_LABEL"
		description="COM_ITEMCOSTS_COMPONENT_DESC"
	>

        <field name="vat"
             type="text"
             default="0.2"
             label="Vat rate"
             description="The globally defined vat rate (no need for % signs etc)">
         </field>
            <field
      name="VPSProtocol"
      type="text"
      default="2.23"
      label="VPS Protocal"
      description="" />
    <field
      name="PurchaseURL"
      type="text"
      default=""
      class="input-xxlarge"
      label="URL to Purchase"
      description="" />
    <field
      name="RepeatURL"
      class="input-xxlarge"
      type="text"
      default=""
      label="URL to do a repeat payment"
      description="" />

    <field
      name="VendorName"
      type="text"
      default=""
      label="Vendor Name"
      description="" />
    <field
      name="TransactionType"
      type="text"
      default=""
      label="Transaction Type"
      description="" />

    <field
      name="Currency"
      type="text"
      default="GBP"
      label="Currency"
      description="" />

    <field
      name="server"
      type="list"
      default="SIMULATOR"
      label="Server to connect to"
      description="">
      <option value="SIMULATOR">Simulator</option>
      <option value="TEST">Test</option>
      <option value="LIVE">Live</option>
    </field>


	</fieldset>

	<fieldset name="permissions"
		description="JCONFIG_PERMISSIONS_DESC"
		label="JCONFIG_PERMISSIONS_LABEL"
	>

		<field
            name="rules"
            type="rules"
			component="com_itemcosts"
            class="inputbox"
			filter="rules"
			validate="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			section="component" />
	</fieldset>

</config>
