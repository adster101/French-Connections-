<?xml version="1.0" encoding="utf-8"?>
<form
  addfieldpath="/libraries/frenchconnections/forms/fields"
   addrulepath="/libraries/frenchconnections/forms/rules">
  <fieldset
    name="fields"
    label="COM_FCADMIN_SPECIALOFFERS_FIELDSET">
    <field
      name="account"
      type="user"
      labelclass="control-label"
      label="Affiliate account"
      class="input-small"
      filter="int"
      required="true"
    />
    <field
      type="text"
      name="title"
      labelclass="control-label"
      label="COM_FCADMIN_SPECIALOFFERS_LABEL"
      class="input-large"
      maxlength="50"
      validate="Fc.length"
      required="true"
      filter="JComponentHelper::filterText">
    </field>
    <field
      type="textarea"
      name="description"
      required="true"
      labelclass="control-label"
      label="COM_FCADMIN_SPECIALOFFERS_DESRIPTION_LABEL"
      validate="Fc.length"
      maxlength="150"
      cols="6"
      rows="8"
      filter="JComponentHelper::filterText">
    </field>
    <field
      name="start_date"
      type="calendar"
      class="input-small"
      label="COM_FCADMIN_SPECIALOFFERS_START_DATE_LABEL"
      filter="string"
      hint="dd-mm-yyyy"
      validate="twoweeks"
      field="end_date"
      required="true"
      format="%d-%m-%Y"
      message="COM_FCADMIN_SPECIALOFFERS_START_DATE_VALIDATION_MESSAGE"
      labelclass="control-label"
    />
    <field
      name="end_date"
      type="calendar"
      class="input-small"
      description="COM_SPECIALOFFERS_END_DATE_DESC"
      label="COM_FCADMIN_SPECIALOFFERS_END_DATE_LABEL"
      filter="string"
      validate="date"
      hint="dd-mm-yyyy"
      required="true"
      format="%d-%m-%Y"
      message="COM_FCADMIN_SPECIALOFFERS_END_DATE_VALIDATION_MESSAGE"
      labelclass="control-label"
    />
  </fieldset>
</form>
