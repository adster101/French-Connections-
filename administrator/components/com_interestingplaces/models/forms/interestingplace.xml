<?xml version="1.0" encoding="utf-8"?>
<form	addrulepath="/administrator/components/com_classification/models/rules">
  <fieldset
    addFieldPath="/administrator/components/com_classification/models/fields"
    name="classification">
	      
    <field
      name="id"
      type="text"
      readonly="true"
      class="readonly"
      default="0"
      label="COM_INTERESTINGPLACES_ID_LABEL"
      description="COM_INTERESTINGPLACES_ID_DESC"
      filter="int"
    />
    <field
      name="date_created"
      type="text"
      default=""
      label="COM_INTERESTINGPLACES_DATE_CREATED"
      description ="COM_INTERESTINGPLACES_DATE_CREATED_DESC"
      maxlength="50"
      size="30"
      required="false"
      class="inputbox"
      readonly="true"
      filter="unset"
    /> 
    <field
      name="title"
      type="text"
      default=""
      label="COM_INTERESTINGPLACES_TITLE_LABEL"
      description ="COM_INTERESTINGPLACES_TITLE_DESC"
      maxlength="250"
      size="250"
      required="true"
      class="input-xlarge"
      filter="string"
    /> 
    <field
      name="email"
      type="text"
      default=""
      label="COM_INTERESTINGPLACES_EMAIL_LABEL"
      maxlength="50"
      size="30"
      required="false"
      class="inputbox"
      filter="email"
    /> 
    <field
      name="website"
      type="text"
      default=""
      label="COM_INTERESTINGPLACES_WEBSITE_LABEL"
      maxlength="50"
      size="30"
      required="true"
      class="inputbox"
      filter="url"
    /> 
    
    <field
      name="telephone"
      type="text"
      default=""
      label="COM_INTERESTINGPLACES_TELEPHONE_LABEL"
      maxlength="50"
      size="30"
      required="true"
      class="inputbox"
      filter="tel"
    /> 
    <field
      name="latitude"
      type="text"
      extension="com_helloworld"
      class="validate-latitude"
      default=""
      label="COM_INTERESTINGPLACES_LATITUDE_LABEL"
      description="COM_INTERESTINGPLACES_LATITUDE_DESC"
      maxlength="15"
      filter="string"
      labelclass="control-label">
    </field>
    
    <field
      name="longitude"
      type="text"
      extension="com_helloworld"
      class="inputbox validate-longitude"
      default=""
      label="COM_INTERESTINGPLACES_LONGITUDE_LABEL"
      description="COM_INTERESTINGPLACES_LONGITUDE_DESC"
      filter="string"
      labelclass="control-label"
      maxlength="15">
    </field>
    <field
      name="published"
      type="list"
      class="inputbox"
      default="1"
      size="1"
      label="JSTATUS"
      description="JFIELD_PUBLISHED_DESC">
      <option
        value="1">
        JPUBLISHED</option>
      <option
        value="0">
        JUNPUBLISHED</option>
      <option
        value="2">
        JARCHIVED</option>
      <option
        value="-2">
        JTRASHED</option>
    </field>
    
    <field
      name="alias"
      type="text"
      class="readonly"
      maxlength="250"
      label="COM_INTERESTINGPLACES_ALIAS_LABEL"
      description="COM_INTERESTINGPLACES_ALIAS_DESC"
    />
	
    <field
      name="description"
      type="editor"
      filter="safehtml"
      label="COM_INTERESTINGPLACES_DESCRIPTION_LABEL"
      class="required"
      height="150px"
      required="true"
    />
    <field
      name="location"
      type="editor"
      filter="safehtml"
      label="COM_INTERESTINGPLACES_LOCATION_LABEL"
      class="false"
      height="150px"
    />
    <field
      name="public_transport"
      type="editor"
      filter="safehtml"
      label="COM_INTERESTINGPLACES_PUBLIC_TRANSPORT_LABEL"
      class="required"
      height="150px"
    />
    <field
      name="general_facilities"
      type="editor"
      filter="string"
      label="COM_INTERESTINGPLACES_GENERAL_FACILITIES_LABEL"
      class="required"
      height="150px"

    />
    
    <field
      name="accessibility"
      type="editor"
      filter="string"
      label="COM_INTERESTINGPLACES_ACCESSIBILITY_LABEL"
      class="required"
      height="150px"
    />          
  </fieldset>	  
	
</form>
