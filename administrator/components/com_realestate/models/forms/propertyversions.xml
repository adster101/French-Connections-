<?xml version="1.0" encoding="utf-8"?>
<form	
  addrulepath="/libraries/frenchconnections/form/rules" 
  addfieldpath="/libraries/frenchconnections/form/fields">
  <fieldset 
    name="Location"
    label="COM_REALESTATE_LOCATION_DETAILS">    
    <field
      name="department"
      type="departments"
      extension="com_rental"
      default="1"
      label="COM_REALESTATE_FIELD_DEPARTMENT_LABEL"
      description="COM_REALESTATE_FIELD_DEPARTMENT_DESC"
      required="true"
      labelclass="control-label">
      <option value="">JOPTION_SELECT_CATEGORY</option>
    </field>
    <field
      name="city"
      type="cities"
      class="inputbox"
      labelclass="control-label"
      label="COM_REALESTATE_FIELD_NEARESTTOWN_LABEL"
      description="COM_REALESTATE_FIELD_NEARESTTOWN_DESC"
      required="true"
      readonly="true">
      <option value="">COM_REALESTATE_FIELD_SELECT_NEAREST_TOWN</option>
    </field>
    <field
      name="map"
      id="map"
      type="map"
    />
    <field
      name="latitude"
      extension="com_rental"
      class="validate-latitude "
      default="0"
      label="COM_REALESTATE_FIELD_LATITUDE_LABEL"
      description="COM_REALESTATE_FIELD_LATITUDE_DESC"
      required="true"
      maxlength="15"
      filter="string"
      validate="latlong"
      labelclass="control-label"
      readonly="true">
    </field>
    <field
      name="longitude"
      extension="com_rental"
      class="inputbox validate-longitude"
      default="0"
      label="COM_REALESTATE_FIELD_LONGITUDE_LABEL"
      description="COM_REALESTATE_FIELD_LONGITUDE_DESC"
      required="true"
      filter="string"
      labelclass="control-label"
      maxlength="15"
      validate="latlong"
      readonly="true">
    </field>

    <field
      name="airport"
      type="airport"
      class="input"
      required="false"
      filter="int"
      validate="nonzero"
      label="Nearest Airport"
      description=""
      default=""
      labelclass="control-label">
      <option value="">JOPTION_SELECT_CATEGORY</option>

    </field>
  </fieldset>

  <fieldset 
    name="description"
    label="COM_REALESTATE_DESCRIPTION_LEGEND">
    <field
      name="title"
      labelclass="control-label"
      type="text"
      label="COM_REALESTATE_FIELD_TITLE_LABEL"
      description="COM_REALESTATE_FIELD_TITLE_DESC"
      size="75"
      maxlength="75"
      class="input-xxlarge"
      validate="Fc.length"
      required="false"
      filter="string"
    />
    <field
      name="description"
      labelclass="control-label"
      type="editor"
      label="COM_RENTAL_HELLOWORLD_FIELD_DESCRIPTION_LABEL"
      description="COM_RENTAL_HELLOWORLD_FIELD_DESCRIPTION_DESC"
      size="40"
      class="inputbox"
      filter="JComponentHelper::filterText"
      required="true"
      buttons="false"
    />
    <field
      name="single_bedrooms"
      type="integer"
      first="1"
      last="10"
      step="1"
      label="COM_RENTAL_HELLOWORLD_FIELD_SINGLE_ROOMS_LABEL"
      description="COM_RENTAL_HELLOWORLD_FIELD_SINGLE_ROOMS_DESC"
      class="input-small"
      labelclass="control-label"
      validate="nonzero"
      filter="int">
      <option value="">JSELECT</option>
    </field>
   
    <field
      name="double_bedrooms"
      type="integer"
      first="1"
      last="10"
      step="1"
      label="COM_RENTAL_HELLOWORLD_FIELD_DOUBLE_ROOMS_LABEL"
      description="COM_RENTAL_HELLOWORLD_FIELD_DOUBLE_ROOMS_DESC"
      class="bedrooms-select input-small"
      validate="nonzero"
      labelclass="control-label"
      filter="int">
      <option value="">JSELECT</option>
    </field>
    <field
      name="bathrooms"
      type="integer"
      first="0"
      last="10"
      step="1"
      label="COM_RENTAL_HELLOWORLD_FIELD_BATHSHOWER_ROOMS_LABEL"
      description="COM_RENTAL_HELLOWORLD_FIELD_BATHSHOWER_ROOMS_DESC"
      class="bedrooms-select input-small"
      validate="bathrooms"
      labelclass="control-label"
      required="true"
      filter="int">
      <option value="">JSELECT</option>
    </field> 
    <field
      name="website"
      type="text"
      label="COM_REALESTATE_FIELD_WEBSITE_LABEL"
      description="COM_REALESTATE_FIELD_WEBSITE_DESC"
      message="COM_REALESTATE_FIELD_WEBSITE_MESSAGE"
      class="input-medium"
      validate="url"
      filter="string"
      labelclass="control-label"
    />
  </fieldset>
  
 <fieldset 
    name="salesdetails"
    label="COM_REALESTATE_PROPERTY_SALE_DETAILS">
 
    <field 
      type="text"
      name="price"
      filter="int"
      class="input-small"
      labelclass="control-label"
      label="COM_REALESTATE_FIELD_PRICE_LABEL"
      description="COM_REALESTATE_FIELD_PRICE_DESC"
      message="COM_REALESTATE_FIELD_PRICE_MESSAGE"
      required="true"
    />
   
    <field
      type="list"
      name="base_currency"
      filter="string"
      labelclass="control-label"
      label="COM_REALESTATE_FIELD_CURRENCY_LABEL"
      description="COM_REALESTATE_FIELD_CURRENCY_DESC"
      message="COM_REALESTATE_FIELD_CURRENCY_MESSAGE"
      required="true"
      default="">
      <option value="">JSELECT</option>
      <option value="EUR">Euro</option>
      <option value="GBP">Sterling</option>
    </field>
      
    <field 
      type="list"
      name="additional_price_notes"
      filter="string"
      labelclass="control-label"
      label="COM_REALESTATE_FIELD_PRICE_NOTES_LABEL"  
      description="COM_REALESTATE_FIELD_PRICE_NOTES_DESC"  
      message="COM_REALESTATE_FIELD_PRICE_NOTES_DESC"  
      required="true"
      default="">
      <option value="">JSELECT</option>
      <option value="COM_REALESTATE_FIELD_PRICE_NOTES_AGENCY_FEE_INCLUDED">COM_REALESTATE_FIELD_PRICE_NOTES_AGENCY_FEE_INCLUDED</option>
      <option value="COM_REALESTATE_FIELD_PRICE_NOTES_NEGOTIABLE">COM_REALESTATE_FIELD_PRICE_NOTES_NEGOTIABLE</option>
      <option value="COM_REALESTATE_FIELD_PRICE_NOTES_OFFERS_IN_THE_REGION_OF">COM_REALESTATE_FIELD_PRICE_NOTES_OFFERS_IN_THE_REGION_OF</option>
      <option value="COM_REALESTATE_FIELD_PRICE_NOTES_OR_NEAREST_OFFER">COM_REALESTATE_FIELD_PRICE_NOTES_OR_NEAREST_OFFER</option>
      <option value="COM_REALESTATE_FIELD_PRICE_NOTES_SALE_BY_PRIVATE_VENDOR">COM_REALESTATE_FIELD_PRICE_NOTES_SALE_BY_PRIVATE_VENDOR</option>
      <option value="COM_REALESTATE_FIELD_PRICE_NOTES_UNCONDITIONAL">COM_REALESTATE_FIELD_PRICE_NOTES_UNCONDITIONAL</option>
    </field>
  </fieldset>
 
  <fieldset name="hidden-details">
    <field
      name="realestate_property_id"
      type="hidden"
      filter="int"
    />
    <field
      name="id"
      type="hidden"
      filter="int"
    />
    <field
      name="published"
      type="hidden"
      filter="unset"/>
    <field
      name="review"
      type="hidden"
      filter="int"
    />
    <field
      name="published_on"
      type="hidden"
      filter="string"
    />
  </fieldset>
  
 

</form>













