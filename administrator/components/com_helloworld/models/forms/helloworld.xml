<?xml version="1.0" encoding="utf-8"?>
<form	addrulepath="/administrator/components/com_helloworld/models/rules">
	<fieldset name="details">
		<field
			name="id"
			type="text"
			default="0"
			label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC"
			class="readonly"
			readonly="true"/>

		<field
			name="asset_id"
			type="hidden"
			filter="unset"/>

		<field
			name="parent_id"
			type="UserProperties"
			label="COM_CATEGORIES_FIELD_PARENT_LABEL"
			description="COM_CATEGORIES_FIELD_PARENT_DESC"
			class="inputbox"
			required="false">
			<option value="1">JOPTION_SELECT_PROPERTY</option>
		</field>	
		
		<field
			name="lft"
			type="hidden"
			filter="unset"/>

		<field
			name="rgt"
			type="hidden"
			filter="unset"/>

		<field
			name="level"
			type="hidden"
			filter="unset"/>	
		
		<field
			name="lang"
			type="hidden"
			required="true"
			default="en-GB"
		/>

		<field
			name="greeting"
			type="text"
			label="COM_HELLOWORLD_HELLOWORLD_FIELD_GREETING_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_FIELD_GREETING_DESC"
			size="40"
			class="inputbox validate-greeting"
			validate="greeting"
			required="true"
			default=""/>
		
		<field
			name="occupancy"
			type="text"
			label="COM_HELLOWORLD_HELLOWORLD_FIELD_OCCUPANCY_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_FIELD_OCCUPANCY_DESC"
			size="40"
			class="inputbox validate-occupancy"
			validate="occupancy"
			required="true"
			default=""/>
			
		<field
			name="swimming"
			type="list"
			label="COM_HELLOWORLD_HELLOWORLD_FIELD_SWIMMINGPOOL_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_FIELD_SWIMMINGPOOL_DESC"
			class="validate-swimming"
			validate="swimming"
			required="true"
			default="">
			<option value="">COM_HELLOWORLD_PLEASE_CHOOSE</option>
			<option value="1">COM_HELLOWORLD_ACCOMMODATION_SWIMMINGPOOL_YES</option>
			<option value="0">COM_HELLOWORLD_ACCOMMODATION_SWIMMINGPOOL_NO</option>
		</field>
		
		<field
			name="description"
			type="editor"
			label="COM_HELLOWORLD_HELLOWORLD_FIELD_DESCRIPTION_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_FIELD_DESCRIPTION_DESC"
			size="40"
			class="inputbox validate-description"
			default=""
			filter="safehtml"
			buttons="false"
		/>
		</fieldset>
		
		<fieldset name="owner">
			<field
				name="created_by"
				type="user"
				label="JGLOBAL_FIELD_CREATED_BY_LABEL"
				desc="JGLOBAL_FIELD_CREATED_BY_DESC"
				/>

			<field
				name="created_time"
				type="text"
				label="JGLOBAL_CREATED_DATE"
				class="readonly"
				filter="unset"
				readonly="true" />

			<field
				name="modified_by"
				type="user"
				label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
				class="readonly"
				readonly="true"
				filter="unset"/>

			<field
				name="modified"
				type="text"
				label="JGLOBAL_FIELD_MODIFIED_LABEL"
				class="readonly"
				filter="unset"
				readonly="true" />		
		</fieldset>
		
		<fields name="params">
	
		<fieldset
			name="Internal Facilities"
			label="COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_PARAMS">
			
			<field
				name="internal_features"
				type="checkboxes"
				label="COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_LABEL"
				description="COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_DESC"
				default=""
				required="true">
				<option value="COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_AIRCON">COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_AIRCON</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_BOARDGAMES">COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_BOARDGAMES</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_CDPLAYER">COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_CDPLAYER</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_CENTRALHEATING">COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_CENTRALHEATING</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_ROOMSERVICE">COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_ROOMSERVICE</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_DVDPLAYER">COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_DVDPLAYER</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_SATELLIETV">COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_SATELLIETV</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_EXCLUSIVERENTAL">COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_EXCLUSIVERENTAL</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_FANS">COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_FANS</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_GAMESCONSOLE">COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_GAMESCONSOLE</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_HAIRDRYER">COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_HAIRDRYER</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_HOTTUB">COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_HOTTUB</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_INTERNET">COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_INTERNET</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_OPENFIRE">COM_HELLOWORLD_ACCOMMODATION_INTERNALFEATURES_OPENFIRE</option>
			</field>
		</fieldset>
	</fields>
	<fields name="params">
		<fieldset
			name="kitchenfacilities"
			label="COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_PARAMS">
			<field
				name="kitchen_facilities"
				type="checkboxes"
				label="COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_LABEL"
				description="COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_DESC"
				default=""
				required="true">
				<option value="COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_MICROWAVE">COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_MICROWAVE</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_COOKER">COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_COOKER</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_DISHWASHER">COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_DISHWASHER</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_ELECTRICHOB">COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_ELECTRICHOB</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_FREEZER">COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_FREEZER</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_FRIDGE">COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_FRIDGE</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_FRIDGEFREEZER">COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_FRIDGEFREEZER</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_GASHOB">COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_GASHOB</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_GASOVEN">COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_GASOVEN</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_IRONINGFACILITIES">COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_IRONINGFACILITIES</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_RANGE">COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_RANGE</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_TUMBLEDRYER">COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_TUMBLEDRYER</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_WASHERDRYER">COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_WASHERDRYER</option>
				<option value="COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_WASHINGMACHINE">COM_HELLOWORLD_ACCOMMODATION_KITCHENFEATURES_WASHINGMACHINE</option>
			</field>
		</fieldset>
	</fields>

	<fieldset name="Location">
		<field
			name="catid"
			type="department"
			extension="com_helloworld"
			class="list"
			default="1"
			label="COM_HELLOWORLD_HELLOWORLD_FIELD_CATID_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_FIELD_CATID_DESC"
			required="true"
		>
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>		
			
		<field
			name="latitude"
			type="text"
			extension="com_helloworld"
			class="inputbox validate-latitude"
			default=""
			label="COM_HELLOWORLD_HELLOWORLD_FIELD_LATITUDE_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_FIELD_LATITUDE_DESC"
			required="true">
		</field>
		<field
			name="longitude"
			type="text"
			extension="com_helloworld"
			class="inputbox validate-longitude"
			default=""
			label="COM_HELLOWORLD_HELLOWORLD_FIELD_LONGITUDE_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_FIELD_LONGITUDE_DESC"
			required="true">
		</field>
		<field
			name="nearest_town"
			type="text"
			extension="com_helloworld"
			class="inputbox validate-nearest_town"
			default=""
			label="COM_HELLOWORLD_HELLOWORLD_FIELD_NEARESTTOWN_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_FIELD_NEARESTTOWN_DESC"
			required="true">
		</field>		
		<field
			name="distance_to_coast"
			type="text"
			extension="com_helloworld"
			class="inputbox validate-distance-to-coast"
			default=""
			label="COM_HELLOWORLD_HELLOWORLD_FIELD_DISTANCETOCOAST_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_FIELD_DISTANCETOCOAST_DESC"
			required="false">
		</field>		
	</fieldset>
	<fields name="params">
		<fieldset	name="params"	label="COM_HELLOWORLD_LOCATION_GENERAL_PARAMS">
			<field name="location_type" type="radio" default="0" label="COM_HELLOWORLD_HELLOWORLD_FIELD_LOCATIONTYPE_LABEL" description="COM_HELLOWORLD_HELLOWORLD_FIELD_LOCATIONTYPE_DESC" required="true">
				<option value="COM_HELLOWORLD_PARAMS_LOCATION_MOUNTAIN">COM_HELLOWORLD_PARAMS_LOCATION_MOUNTAIN</option>
				<option value="COM_HELLOWORLD_PARAMS_LOCATION_COASTAL">COM_HELLOWORLD_PARAMS_LOCATION_COASTAL</option>
				<option value="COM_HELLOWORLD_PARAMS_LOCATION_RURAL">COM_HELLOWORLD_PARAMS_LOCATION_RURAL</option>
				<option value="COM_HELLOWORLD_PARAMS_LOCATION_CITY">COM_HELLOWORLD_PARAMS_LOCATION_CITY</option>
				<option value="COM_HELLOWORLD_PARAMS_LOCATION_VALLEY">COM_HELLOWORLD_PARAMS_LOCATION_VALLEY</option>
			</field>
		</fieldset>
		<fieldset name="access" label="COM_HELLOWORLD_ACCESS_GENERAL_PARAMS">
			<field name="access_options" type="checkboxes" default="0" label="COM_HELLOWORLD_HELLOWORLD_FIELD_ACCESSOPTIONS_LABEL" description="COM_HELLOWORLD_HELLOWORLD_FIELD_ACCESSOPTIONS_DESC" required="true" multiple="true">
				<option value="COM_HELLOWORLD_PARAMS_ACCESS_PUBLICTRANSPORTAVAILABLE">COM_HELLOWORLD_PARAMS_ACCESS_PUBLICTRANSPORTAVAILABLE</option>
				<option value="COM_HELLOWORLD_PARAMS_ACCESS_PUBLICTRANSPORTNOTAVAILABLE">COM_HELLOWORLD_PARAMS_ACCESS_PUBLICTRANSPORTNOTAVAILABLE</option>
				<option value="COM_HELLOWORLD_PARAMS_ACCESS_AIRPORTPICKUP">COM_HELLOWORLD_PARAMS_ACCESS_AIRPORTPICKUP</option>
				<option value="COM_HELLOWORLD_PARAMS_ACCESS_CARESSENTIAL">COM_HELLOWORLD_PARAMS_ACCESS_CARESSENTIAL</option>
				<option value="COM_HELLOWORLD_PARAMS_ACCESS_OWNERPICKUPAVAILABLE">COM_HELLOWORLD_PARAMS_ACCESS_OWNERPICKUPAVAILABLE</option>
				<option value="COM_HELLOWORLD_PARAMS_ACCESS_TAXIFROMAIRPORT">COM_HELLOWORLD_PARAMS_ACCESS_TAXIFROMAIRPORT</option>
				<option value="COM_HELLOWORLD_PARAMS_ACCESS_TAXIFROMTRAINSTATION">COM_HELLOWORLD_PARAMS_ACCESS_TAXIFROMTRAINSTATION</option>
				<option value="COM_HELLOWORLD_PARAMS_ACCESS_TRAINSTATIONPICKUPAVAILABLE">COM_HELLOWORLD_PARAMS_ACCESS_TRAINSTATIONPICKUPAVAILABLE</option>
			</field>
		</fieldset>
	</fields>
</form>
