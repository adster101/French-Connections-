<?xml version="1.0" encoding="utf-8"?>
<form	addrulepath="/administrator/components/com_helloworld/models/rules">
  <fieldset name="submit">
    <field
      name="admin_notes"
      type="textarea"
      default=""
      labelclass="control-label"
      label="COM_HELLOWORLD_HELLOWORLD_LISTING_SUBMIT_FOR_REVIEW_NOTES_FIELD"
      description ="COM_HELLOWORLD_HELLOWORLD_LISTING_SUBMIT_FOR_REVIEW_NOTES_DESCRIPTION"
      maxlength="75"
      required="false"
      cols="10"
      class="validate submission-notes xxxlarge"
      filter="string">
    </field>

    <field
      name="tos"
      type="inlinecheckbox"
      default=""
      required="true"
      labelclass="checkbox required"
      filter="int"
      message="Please confirm that you accept the terms and conditions"
      label="By checking this box I confirm that I have read and agree to be bound by all of the French Connections Terms and Conditions.">
    </field>
   


    <field
      name="property_id"
      type="hidden"
      default=""
      filter="int">
    </field>
  </fieldset>
</form>