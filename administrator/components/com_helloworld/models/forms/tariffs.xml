<?xml version="1.0" encoding="UTF-8"?>
<!--
  This document describes the tariff form on the property manager screen.
  The actual tariff fields are injected via a plugin hook.
-->
<form	addrulepath="/administrator/components/com_helloworld/models/rules">
  <fieldset name="additional-fields">
    <field 
      name="id"
      type="text"
      disabled="true"
      default=""
      label="COM_HELLOWORLD_FIELD_PROPERTY_ID_LABEL"
      class="readonly"
      description="COM_HELLOWORLD_FIELD_PROPERTY_ID_DESC"/>
    <field 
      name="parent_id"
      type="hidden"
      default="">      
    </field>
    <field 
      name="greeting"
      type="hidden"
      default=""> 

    </field>
    
    <field 
      name="published"
      type="text"
      filter="unset"/>
      
    <field 
      name="expiry_date"
      type="hidden"
      filter="unset"/>
    
  
  <field
      name="base_currency"
      labelclass="control-label"
      label="COM_HELLOWORLD_TARIFFS_FIELD_BASE_CURRENCY_LABEL"
      description="COM_HELLOWORLD_TARIFFS_FIELD_BASE_CURRENCY_MESSAGE"
      message="COM_HELLOWORLD_TARIFFS_FIELD_BASE_CURRENCY_DESC"
      type="attributetype"
      filter="integer"
      required="true"
      id="19"
      default="1"
      placeholder="true"      
    />    
    <field 
      name="tariff_based_on"
      type="attributetype"
      label="COM_HELLOWORLD_TARIFFS_FIELD_TARIFF_BASED_ON_LABEL"
      description="COM_HELLOWORLD_TARIFFS_FIELD_TARIFF_BASED_ON_DESC"
      required="true"
      filter="int"
      id="21"
      default=""
      placeholder="true">
     
    </field>
    <field
			name="additional_price_notes"
			type="editor"
			label="COM_HELLOWORLD_TARIFFS_FIELD_ADDITIONAL_PRICE_NOTES_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_FIELD_ADDITIONAL_PRICE_NOTES_DESC"
      rows="3"
      class="inputbox validate-description"
			default=""
			filter="safehtml"
			buttons="false"
      validate="additionalpricenotes"
      message="COM_HELLOWORLD_HELLOWORLD_FIELD_ADDITIONAL_PRICE_NOTES_MESSAGE" />
	</fieldset>

</form>



