<?xml version="1.0" encoding="utf-8"?>
<form	addrulepath="/administrator/components/com_helloworld/models/rules">
  <fieldset name="description">
    <field
      name="title"
      labelclass="control-label"
      type="text"
      label="COM_HELLOWORLD_HELLOWORLD_FIELD_GREETING_LABEL"
      description="COM_HELLOWORLD_HELLOWORLD_FIELD_GREETING_DESC"
      size="75"
      maxlength="75"
      class="input-xxlarge validate-greeting"
      validate="greeting"
      required="true"
      filter="string"/>   
  </fieldset>	  

 

  <fieldset name="Location">
    <field
      name="department"
      type="departments"
      extension="com_helloworld"
      class="list validate"
      default="1"
      label="COM_HELLOWORLD_HELLOWORLD_FIELD_DEPARTMENT_LABEL"
      description="COM_HELLOWORLD_HELLOWORLD_FIELD_DEPARTMENT_DESC"
      required="true"
      labelclass="control-label">
      <option value="">JOPTION_SELECT_CATEGORY</option>
    </field>		
  
    <field 
      name="map"
      id="map"
      type="map"
      />
    <field
      name="latitude"
      type="hidden"
      extension="com_helloworld"
      class="validate-latitude "
      default="46.589069"
      label="COM_HELLOWORLD_HELLOWORLD_FIELD_LATITUDE_LABEL"
      description="COM_HELLOWORLD_HELLOWORLD_FIELD_LATITUDE_DESC"
      required="true"
      maxlength="15"
      filter="string"
      validate="latlong"
      labelclass="control-label"
      readonly="true">
    </field>
    <field
      name="longitude"
      type="hidden"
      extension="com_helloworld"
      class="inputbox validate-longitude"
      default="2.416992"
      label="COM_HELLOWORLD_HELLOWORLD_FIELD_LONGITUDE_LABEL"
      description="COM_HELLOWORLD_HELLOWORLD_FIELD_LONGITUDE_DESC"
      required="true"
      filter="string"
      labelclass="control-label"
      maxlength="15"
      validate="latlong"
      readonly="true">
    </field>

  <field
      name="city"
      type="cities"
      class="inputbox validate"
      labelclass="control-label"
      label="COM_HELLOWORLD_HELLOWORLD_FIELD_NEARESTTOWN_LABEL"
      description="COM_HELLOWORLD_HELLOWORLD_FIELD_NEARESTTOWN_DESC"
      required="true"
      readonly="false"
      latitude="46.589069"
      longitude="2.416992">
      <option value="">COM_HELLOWORLD_HELLOWORLD_FIELD_SELECT_NEAREST_TOWN</option>
    </field>		
    <field
      name="location_type"
      type="attributetype"
      class="inputbox validate"
      labelclass="control-label"
      label="COM_HELLOWORLD_HELLOWORLD_FIELD_LOCATION_TYPE_LABEL"
      description="COM_HELLOWORLD_HELLOWORLD_FIELD_LOCATION_TYPE_DESC"
      required="true"
      filter="int"
      id="7"
      >
    </field>		    
    <field
      name="distance_to_coast"
      type="text"
      extension="com_helloworld"
      class="inputbox validate-distance-to-coast"
      default=""
      labelclass="control-label"
      label="COM_HELLOWORLD_HELLOWORLD_FIELD_DISTANCETOCOAST_LABEL"
      description="COM_HELLOWORLD_HELLOWORLD_FIELD_DISTANCETOCOAST_DESC"
      required="false"
      filter="int"
      maxlength="2">
    </field>		
    <field
			name="location_details"
			type="editor"
			label="COM_HELLOWORLD_HELLOWORLD_FIELD_LOCATION_DETAILS_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_FIELD_LOCATION_DETAILS_DESC"
      rows="3"
      class="inputbox validate-description"
			default=""
			filter="safehtml"
			buttons="false"
      validate=""
      message="COM_HELLOWORLD_HELLOWORLD_FIELD_LOCATION_DETAILS_MESSAGE">
    </field>
    <field
			name="getting_there"
			type="editor"
			label="COM_HELLOWORLD_HELLOWORLD_FIELD_GETTING_THERE_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_FIELD_GETTING_THERE_DESC"
      rows="3"
      class="inputbox validate-description"
			default=""
			filter="safehtml"
			buttons="false"
      validate=""
      message="COM_HELLOWORLD_HELLOWORLD_FIELD_GETTING_THERE_MESSAGE">
    </field>    
  </fieldset>

  <fieldset name="additional-details"> 
    <field
      name="id"
      type="text"
      default="0"
      label="COM_HELLOWORLD_FIELD_PROPERTY_ID_LABEL"
      description ="COM_HELLOWORLD_FIELD_PROPERTY_ID_DESC"
      class="readonly input-mini"
      labelclass=""
      readonly="true"/>
    <field 
      name="expiry_date"
      type="text"
      readonly="true"
      class="readonly input-small"
      label="COM_HELLOWORLD_FIELD_PROPERTY_EXPIRY_DATE_LABEL"
      description="COM_HELLOWORLD_FIELD_PROPERTY_EXPIRY_DATE_DESC"
      filter="unset"
      labelclass=""/> 
      
  </fieldset>
  
  <fieldset name="owner">
    <field
      labelclass="control-label"
      name="created_by"
      type="user"
      readonly="false"
      default=""
      label="COM_HELLOWORLD_FIELD_PROPERTY_CREATED_BY_LABEL"
      desc="COM_HELLOWORLD_FIELD_PROPERTY_CREATED_BY_DESC"
      class="input-small required"
      required="true"
      validate="owner"
      />
    <field
      name="created_on"
      labelclass="control-label"
      type="text"
      label="JGLOBAL_CREATED_DATE"
      class="readonly input-small"
      filter="string"
      readonly="true" />
    <field
      labelclass="control-label"
      name="modified_by"
      type="user"
      label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
      class="readonly input-small"
      readonly="true"
      filter="unset"/>
    <field
      labelclass="control-label"
      name="modified"
      type="text"
      label="JGLOBAL_FIELD_MODIFIED_LABEL"
      class="readonly input-small"
      filter="unset"
      readonly="true" />		
  </fieldset>
  
  <fieldset name="notes">
    <field 
      labelclass="control-label"
      name="note"
      filter="string"
      type="textarea"
      label="COM_HELLOWORLD_FIELD_PROPERTY_ADMIN_NOTES_LABEL"
      description="COM_HELLOWORLD_FIELD_PROPERTY_ADMIN_NOTES_DESC"
      default="">      
    </field>   
  </fieldset>
  
  <fieldset name="hidden-details">
    <field 
      name="published"
      type="hidden"
      filter="unset"/>
    <field 
      name="new_version"
      type="hidden"
      filter="int"
      default="" />
  </fieldset>
 
</form>













