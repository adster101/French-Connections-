<?xml version="1.0" encoding="utf-8"?>
<form	addrulepath="/administrator/components/com_helloworld/models/rules">
	<fieldset name="note">
    <field 
      name="property_id"
      type="text"
      filter="int"
      required="true"
      class="input-large"
      readonly="true"
      label="COM_HELLOWORLD_SNOOZE_PROPERTY_ID"
			description =""      
      labelClass="control-label">
    </field>
    <field
			name="snooze_until"
			type="calendar"
			default=""
			label="COM_HELLOWORLD_SNOOZE_SNOOZE_DATE"
			description =""
      size="80"
      maxlength="75"
      class="validate"
      labelClass="control-label">
    </field>
    <field 
      name="subject"
      type="input"
      label="Note subject"
      labelClass="control-label"
      class="input"
      filter="string"
      required="true">
    </field>
    <field 
      name="body"
      type="textarea"
			label="COM_HELLOWORLD_SNOOZE_CONTACT_NOTES"
			description ="COM_HELLOWORLD_IMAGES_EDIT_CAPTION_IMAGE_DESC"      
      labelClass="control-label"
      class="input-xlarge"
      filter="string">
    </field>
    <field 
      name="catid"
      required="true"
      default="0"
      type="category"
			label="COM_HELLOWORLD_ADMIN_NOTES_CATEGORY"
			description ="" 
      message="COM_HELLOWORLD_ADMIN_NOTES_CATEGORY_VALIDATION"
      labelClass="control-label"
      class="input-large"
      filter="int"
      validate="nonzero"
      show_root="true"
      extension="com_helloworld">
    </field>    

  </fieldset>
</form>