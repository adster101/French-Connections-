<?xml version="1.0" encoding="utf-8"?>
<form	addrulepath="/administrator/components/com_helloworld/models/rules">
  
  <fieldset
    name="enquiry-contact-override">
    <field 
      name="contact_override_note" 
      type="note"
      class="alert alert-notice" 
      label=""
      labelclass="control-label"
      description="COM_HELLOWORLD_HELLOWORLD_ENQUIRY_OVERRIDE_OPTION" />
    <field 
      name="use_invoice_details"
      type="radio"
      default="1"      
      filter="int"
      label="Use invoice address"
      required="false"
      labelclass="control-label">
      <option value="1">JYES</option>
      <option value="0">JNO</option>
    </field>      
    
    <field 
      name="first_name"
      type="text"
      class="input-medium"
      filter="string"
      label="First name"
      labelclass="control-label"
      maxlength="25"
      required="true"
    />
    <field 
      name="surname"
      type="text"
      class="input-medium"
      filter="string"
      label="Surname"
      labelclass="control-label"
      maxlength="25"
      required="true"
    />
    <field 
      name="phone_1"
      type="text"
      filter="string"
      label="Phone number"
      maxlength="25"
      labelclass="control-label"
      required="true"
    />
    <field 
      name="phone_2"
      type="text"
      filter="string"
      label="Mobile number"
      maxlength="25"
      labelclass="control-label"
      required="false"
    />
    <field 
      name="phone_3"
      type="text"
      filter="string"
      label="Other phone"
      maxlength="25"
      labelclass="control-label"
      required="false"
    />
    <field 
      name="fax"
      type="text"
      filter="string"
      label="Fax number"
      maxlength="25"
      labelclass="control-label"
      required="false"
    />    
    <field 
      name="email_1"
      type="text"
      filter="string"
      label="Contact email"
      maxlength="25"
      labelclass="control-label"
      required="true"
    />      
    <field 
      name="email_2"
      type="text"
      filter="string"
      label="Alternative email"
      maxlength="25"
      labelclass="control-label"
      required="false"
    />         
    
  </fieldset>
  
  <fieldset
    name="sms-preferences">
    <field 
      name="smsprefs" 
      type="note"
      class="alert alert-notice" 
      labelclass="control-label"
      description="COM_HELLOWORLD_HELLOWORLD_ENQUIRY_SMS_CONTACT_PREFERENCES" />
    <field 
      name="sms_valid_message" 
      type="note"
      class="alert alert-success" 
      labelclass="control-label"
      description="COM_HELLOWORLD_HELLOWORLD_ENQUIRY_SMS_CONTACT_ACTIVE" />
    <field 
      name="sms_alert_number" 
      type="text"
      label="SMS Telephone Number"
      maxlength="25"
      labelclass="control-label"
      filter="string"
      description="" 
    />
    <field 
      name="dummy_validation_code" 
      type="text"
      label="SMS Validation code"
      maxlength="25"
      labelclass="control-label"
      filter="string"
      default=""
      value=""
      description="" 
    />    
    

 
    
    
    
  </fieldset>
  
  <fieldset
    name="booking-form">
    <field 
      name="booking_form_note" 
      type="note"
      class="alert alert-notice" 
      label=""
      description="COM_HELLOWORLD_HELLOWORLD_BOOKING_FORM_DISPLAY" />
    <field 
      name="booking_form"
      type="radio"
      default="0"
      filter="int"
      class="btn-group"
      label="Show booking form?"
      required="false"
      labelclass="control-label">
      <option value="1">JYES</option>
      <option value="0">JNO</option>
    </field>
    
  </fieldset>



  <fieldset name="hidden-details">
    <field
      name="sms_valid"
      type="hidden"
      filter="int"
      default="0"
    />    
    <field
      name="property_id"
      type="hidden"
      filter="int"
    />
    <field
      name="id"
      type="hidden"
      filter="int"
    />
    <field
      name="published"
      type="hidden"
      filter="unset"/>
    <field
      name="review"
      type="hidden"
      filter="int"
      default="" />
    <field
      name="published_on"
      type="hidden"
      filter="string"
      default=""
    />
  </fieldset>
  
 

</form>













