<?xml version="1.0" encoding="utf-8"?>
<config>
  <fieldset 
    name="permissions"
    description="JCONFIG_PERMISSIONS_DESC"
    label="JCONFIG_PERMISSIONS_LABEL">

    <field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			class="inputbox"
			validate="rules"
			filter="rules"
			component="com_autorenewals"
			section="component"
    />
  </fieldset>
  <fieldset 
    name="manual"
    description="Update the email settings for manual renewals"
    label="Manual renewal emails">
    <field 
      name="RENEWAL_REMINDER_SUBJECT_30_DAYS"
      type="text"
      label="30 day reminder (subject)"
      filter="string"
      class="input-xxlarge"
    />
    <field 
      name="RENEWAL_REMINDER_DAYS_30" 
      type="editor" default="default" 
      label="30 day reminder (body)" 
      filter="safehtml"
    />
    <field 
      name="RENEWAL_REMINDER_SUBJECT_21_DAYS"
      type="text"
      label="21 day reminder (subject)"
      filter="string"
      class="input-xxlarge"
    />
    <field 
      name="RENEWAL_REMINDER_DAYS_21" 
      type="editor" default="default" 
      label="21 day reminder (body)" 
      description="" 
      filter="safehtml"
    /> 
    <field 
      name="RENEWAL_REMINDER_SUBJECT_14_DAYS"
      type="text"
      label="14 day reminder (subject)"
      filter="string"
      class="input-xxlarge"
    />
    <field 
      name="RENEWAL_REMINDER_DAYS_14" 
      type="editor" default="default" 
      label="14 day reminder (body)" 
      filter="safehtml"
    />  
    <field 
      name="RENEWAL_REMINDER_SUBJECT_7_DAYS"
      type="text"
      label="7 day reminder (subject)"
      filter="string"
      class="input-xxlarge"
    />
    <field 
      name="RENEWAL_REMINDER_DAYS_7" 
      type="editor" default="default" 
      label="7 day reminder (body)" 
      filter="safehtml"
    />  
    <field 
      name="RENEWAL_REMINDER_SUBJECT_1_DAYS"
      type="text"
      label="1 day reminder (subject)"
      filter="string"
      class="input-xxlarge"
    />
    <field 
      name="RENEWAL_REMINDER_DAYS_1" 
      type="editor" default="default" 
      label="1 day reminder (body)" 
      filter="safehtml"
    />
    <field
      name="RENEWAL_REMINDER_SUBJECT_EXPIRED"
      type="text"
      label="Expiry reminder (Subject)"
      filter="string"
      class="input-xxlarge"
    />
    <field 
      name="RENEWAL_REMINDER_EXPIRED" 
      type="editor" default="default" 
      label="-1 day expired (body)" 
      filter="safehtml"
    />
  </fieldset>
  <fieldset 
    name="auto"
    description="Update the email settings for auto-renewals"
    label="Auto renewal emails">
    <field
      name="AUTO_RENEWAL_30_DAYS_SUBJECT"
      type="text"
      label="Auto renewal reminder (subject)"
      filter="string"
      class="input-xxlarge"
    />
    
    <field 
      name="AUTO_RENEWAL_30_DAYS" 
      type="editor" default="default" 
      label="30 day reminder (auto)" 
      filter="safehtml"
    />
    
    <field
      name="AUTO_RENEWAL_7_DAYS_SUBJECT"
      type="text"
      label="Auto renewal shadow payment failure (subject)"
      filter="string"
      class="input-xxlarge"
    />    
    <field 
      name="AUTO_RENEWAL_7_DAYS" 
      type="editor" default="default" 
      label="7 day shoadow payment failure" 
      description="" 
      filter="safehtml"
    /> 
    <field
      name="AUTO_RENEWAL_SUCCESS_SUBJECT"
      type="text"
      label="Auto renewal success (subject)"
      filter="string"
      class="input-xxlarge"
    />    
    <field 
      name="AUTO_RENEWAL_SUCCESS" 
      type="editor" default="default" 
      label="Successful payment" 
      description="" 
      filter="safehtml"
    />     
  </fieldset>
</config>
