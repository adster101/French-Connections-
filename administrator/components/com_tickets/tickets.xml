  <author>Adam Rifat</author>
  <authorEmail>adam@littledonkey.net</authorEmail>
  <authorUrl>http://</authorUrl>
  <version>1.0.0</version>
  <description>This component allows you to view and manage tickets.</description>
  <install> <!-- Runs on install -->
    <sql>
      <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
    </sql>
  </install>
  <uninstall> <!-- Runs on uninstall -->
    <sql>
      <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
    </sql>
  </uninstall>
  <languages folder="site">
    <language tag="en-GB">language/en-GB.com_invoices.ini
    </language>
  </languages>
  <administration>
    <menu>COM_tickets</menu>
    <files folder="administrator">
      <filename>access.xml</filename>
      <filename>config.xml</filename>
      <filename>controller.php</filename>
      <filename>index.html</filename>
      <filename>tickets.php</filename>
      <folder>controllers</folder>
      <folder>assets</folder>
      <folder>helpers</folder>
      <folder>models</folder>
      <folder>sql</folder>
      <folder>tables</folder>
      <folder>views</folder>
    </files>
    <languages folder="administrator">
      <language tag="en-GB">language/en-GB.com_invoices.ini</language>
      <language tag="en-GB">language/en-GB.com_invoices.sys.ini</language>
    </languages>
  </administration>
</extension>