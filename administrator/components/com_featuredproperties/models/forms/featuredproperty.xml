<?xml version="1.0" encoding="UTF-8"?>
<form>
  <fieldset 
    name="featured-property" 
    label="">
    
    <field 
      label="Property id"    
      name="property_id"
      labelClass="control-label"
      filter="int"
      type="text"
      required="true"
      class="required"
    />   

    <field
      type="category"
      name="featured_property_type"
      label="Featured property type"
      labelClass="control-label"
      filter="int"
      required="true"
      extension="com_featuredproperties"
      class="required"

    />  
    <field 
      label="Start date"
      name="start_date"
      labelClass="control-label"
      filter="string"
      type="calendar"
      required="true"
      class="required"
      default=""
      format="%d-%m-%Y"
    />        
    <field 
      label="End date"
      name="end_date"
      labelClass="control-label"
      filter="string"
      required="true"
      type="calendar"
      class="required"
      default=""
      format="%d-%m-%Y"
    />        
    <field 
      label="Paid status"    
      name="published"
      filter="int"
      type="list"
      labelClass="control-label">
      <option value="">JGLOBAL_SELECT_AN_OPTION</option>    
      <option value="1">Paid</option>    
      <option value="0">Unpaid</option>    
    </field>
    <field
      label="Notes"
      type="textarea"
      labelClass="control-label"
      filter="string"
      name="notes"
    />       
    <field 
      type="hidden"
      name="id"
      filter="int"
    />
  </fieldset>
</form>