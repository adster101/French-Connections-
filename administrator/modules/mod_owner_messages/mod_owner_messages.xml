  <description>MOD_OWNER_MESSAGES_XML_DESCRIPTION</description>
  <files>
    <filename module="mod_status">mod_owner_messages.php</filename>
    <filename>index.html</filename>
    <folder>tmpl</folder>
  </files>
  <languages>
    <language tag="en-GB">en-GB.mod_owner_messages.ini</language>
