<?xml version="1.0" encoding="utf-8"?>
<form 
  addrulepath="/libraries/frenchconnections/forms/rules"
  addfieldpath="/libraries/frenchconnections/forms/fields">
    
  <fieldset 
    name="user_details"
    label="PLG_USER_PROFILE_SLIDER_LABEL">
    <field 
      name="name" 
      type="hidden"
      required="false"
      default="asd"
    />
    <field
      name="firstname"
      type="text"
      id="firstname"
      description="COM_ADMIN_FIRST_NAME"
      filter="string"
      label="COM_ADMIN_FIRST_NAME"
      message="PLG_USER_PROFILE_FIELD_FIRSTNAME_MESSAGE"
      size="30"
      required="true"
    />      
      
    <field
      name="surname"
      required="true"
      type="text"
      id="surname"
      description="COM_ADMIN_FIRST_SURNAME"
      filter="string"
      label="COM_ADMIN_SURNAME"
      message="PLG_USER_PROFILE_FIELD_SURNAME_MESSAGE"
      size="30"
    />      
      
    <field
      name="address1"    
      required="true"
      type="text"
      id="address1"
      description="PLG_USER_PROFILE_FIELD_ADDRESS1_DESC"
      filter="string"
      label="PLG_USER_PROFILE_FIELD_ADDRESS1_LABEL"
      message="PLG_USER_PROFILE_FIELD_ADDRESS1_MESSAGE"
      size="30"
    />
      
    <field
      name="address2"
      type="text"
      id="address2"
      description="PLG_USER_PROFILE_FIELD_ADDRESS2_DESC"
      filter="string"
      label="PLG_USER_PROFILE_FIELD_ADDRESS2_LABEL"
      message="PLG_USER_PROFILE_FIELD_ADDRESS2_MESSAGE"
      size="30"
    />
      
    <field
      name="address3"
      type="text"
      id="address3"
      description="PLG_USER_PROFILE_FIELD_ADDRESS3_DESC"
      filter="string"
      label="PLG_USER_PROFILE_FIELD_ADDRESS3_LABEL"
      message="PLG_USER_PROFILE_FIELD_ADDRESS3_MESSAGE"
      size="30"
    />
          
    <field
      name="city"
      required="true"
      type="text"
      id="city"
      description="PLG_USER_PROFILE_FIELD_CITY_DESC"
      filter="string"
      label="PLG_USER_PROFILE_FIELD_CITY_LABEL"
      message="PLG_USER_PROFILE_FIELD_CITY_MESSAGE"
      size="30"
    />
      
    <field
      name="region"
      type="text"
      required="true"
      id="region"
      description="PLG_USER_PROFILE_FIELD_REGION_DESC"
      filter="string"
      label="PLG_USER_PROFILE_FIELD_REGION_LABEL"
      message="PLG_USER_PROFILE_FIELD_REGION_MESSAGE"
      size="30"
    />
    <field
      name="postal_code"
      required="true"
      type="text"
      id="postal_code"
      description="PLG_USER_PROFILE_FIELD_POSTAL_CODE_DESC"
      filter="string"
      label="PLG_USER_PROFILE_FIELD_POSTAL_CODE_LABEL"
      message="PLG_USER_PROFILE_FIELD_POSTAL_CODE_MESSAGE"
      size="30"
    />
    <field
      name="country"
      type="country"
      required="true"
      id="country"
      description="PLG_USER_PROFILE_FIELD_COUNTRY_DESC"
      filter="string"
      label="PLG_USER_PROFILE_FIELD_COUNTRY_LABEL"
      message="PLG_USER_PROFILE_FIELD_COUNTRY_MESSAGE">
      <option value="">JSELECT</option>

    </field>
    
    <field
      name="state"
      type="state"
      default=""
      description="PLG_USER_PROFILE_FIELD_STATE_DESC"
      filter="string"
      label="PLG_USER_PROFILE_FIELD_STATE_LABEL"
      message="PLG_USER_PROFILE_FIELD_STATE_MESSAGE"
      labelclass="control-label">
      <option value="">Please select...</option>
    </field>   
      
    <field
      name="email_alt"
      type="email"
      label="PLG_USER_PROFILE_FIELD_EMAIL_2_LABEL"
      description="PLG_USER_PROFILE_FIELD_EMAIL_2_DESC"

      validate="email"
      size="30">
    </field>
    <field
      name="phone_1"
      type="tel"
      required="true"
      id="phone_1"
      description="PLG_USER_PROFILE_FIELD_PHONE_1_DESC"
      filter="string"
      label="PLG_USER_PROFILE_FIELD_PHONE_1_LABEL"
      message="PLG_USER_PROFILE_FIELD_PHONE_1_MESSAGE"
      size="30"
    />
    <field
      name="phone_2"
      type="tel"
      id="phone_2"
      description="PLG_USER_PROFILE_FIELD_PHONE_2_DESC"
      filter="string"
      label="PLG_USER_PROFILE_FIELD_PHONE_2_LABEL"
      message="PLG_USER_PROFILE_FIELD_PHONE_2_MESSAGE"
      size="30"
    />
      
    <field
      name="phone_3"
      type="tel"
      id="phone_3"
      description="PLG_USER_PROFILE_FIELD_PHONE_3_DESC"
      filter="string"
      label="PLG_USER_PROFILE_FIELD_PHONE_3_LABEL"
      message="PLG_USER_PROFILE_FIELD_PHONE_3_MESSAGE"
      size="30"
    />

      
    <field
      name="vat_status_note"
      type="note"
      label=""
      description="COM_ADMIN_VAT_STATUS_NOTE"
      class="alert alert-info"
    />
      
    <field
      name="vat_status"
      required="true"
      type="list"
      default=""
      class="input-xxlarge"
      label="PLG_USER_PROFILE_FIELD_VAT_STATUS_LABEL"
      description="PLG_USER_PROFILE_FIELD_VAT_STATUS_DESC">
      <option value="">PLG_USER_PROFILE_FIELD_PLEASE_CHOOSE</option>
      <option	value="S20">PLG_USER_PROFILE_FIELD_VAT_STATUS_S2</option>
      <option	value="S2A">PLG_USER_PROFILE_FIELD_VAT_STATUS_S2A</option>
      <option	value="Z">PLG_USER_PROFILE_FIELD_VAT_STATUS_Z</option>
      <option	value="ZA">PLG_USER_PROFILE_FIELD_VAT_STATUS_ZA</option>
      <option	value="ECS">PLG_USER_PROFILE_FIELD_VAT_STATUS_ECS</option>
    </field>
      
    <field
      name="vat_number"
      type="text"
      description="PLG_USER_PROFILE_FIELD_VAT_NUMBER_DESC"
      label="PLG_USER_PROFILE_FIELD_VAT_NUMBER_LABEL"
      message="PLG_USER_PROFILE_FIELD_VAT_NUMBER_MESSAGE"
      size="30"
      validate="vat"
      required="false"
      class="validate validate-vat"
    />
      
    <field
      name="company_number"
      type="text"
      description="PLG_USER_PROFILE_FIELD_COMPANY_NUMBER_DESC"
      label="PLG_USER_PROFILE_FIELD_COMPANY_NUMBER_LABEL"
      message="PLG_USER_PROFILE_FIELD_COMPANY_NUMBER_MESSAGE"
      size="30"
      validate="company"
      required="false"
      class="validate validate-company"
    />
			
    <field
      name="receive_newsletter"
      type="checkbox"
      id="receive_newsletter"
      description="PLG_USER_PROFILE_FIELD_RECEIVE_NEWSLETTER_DESC"
      filter="integer"
      label="PLG_USER_PROFILE_FIELD_RECEIVE_NEWSLETTER_LABEL"
      message="PLG_USER_PROFILE_FIELD_RECEIVE_NEWSLETTER_MESSAGE"
      value="1"
      default="1"
    />
    
    <field
      name="vat_number"
      type="text"
      description="PLG_USER_PROFILE_FIELD_VAT_NUMBER_DESC"
      label="PLG_USER_PROFILE_FIELD_VAT_NUMBER_LABEL"
      message="PLG_USER_PROFILE_FIELD_VAT_NUMBER_MESSAGE"
      size="30"
      validate="vat"
      required="false"
      class="validate validate-vat"
    />
          
    <field 
      name="exchange_rate_eur"
      type="text"
      label="PLG_USER_PROFILE_FIELD_EXCHANGE_RATE_EUR_LABEL"
      description=""
      validate="exchange"
      required="false"
      class="validate validate-exchange"
    />
              
    <field 
      name="exchange_rate_usd"
      type="text"
      description=""
      label="PLG_USER_PROFILE_FIELD_EXCHANGE_RATE_USD_LABEL"
      validate="exchange"
      required="false"
      class="validate validate-exchange"
    />
  </fieldset>
  <fieldset
    name="sms-preferences"
    label="COM_ADMIN_VIEW_PROFILE_SMS_SETTINGS">
    <field 
      name="smsprefs" 
      type="note"
      class="alert alert-notice" 
      labelclass="control-label"
      description="COM_RENTAL_HELLOWORLD_ENQUIRY_SMS_CONTACT_PREFERENCES" />
    <field 
      name="sms_valid_message" 
      type="note"
      class="alert alert-success" 
      labelclass="control-label"
      description="COM_RENTAL_HELLOWORLD_ENQUIRY_SMS_CONTACT_ACTIVE" />  
    <field 
      name="sms_alert_number" 
      type="text"
      label="SMS Telephone Number"
      maxlength="25"
      hint="e.g. 44 7956 123 456" 
      labelclass="control-label"
      filter="string"
      description="" 
      validate="tel"
    />
 
    <field 
      name="dummy_validation_code" 
      type="text"
      label="SMS Validation code"
      maxlength="25"
      labelclass="control-label"
      filter="string"
      default=""
      value=""
      description=""
      class="input-small" 
    />    
   
    <field 
      name="sms_nightwatchman"
      type="checkbox"
      label="COM_RENTAL_CONTACT_DETAILS_SMS_NIGHTWATCHMAN"
      description=""
      class="inline"
      required="false"
      filter="int"
      default="0"
      labelclass="control-label"
    />
    <field
      name="sms_valid"
      type="hidden"
      filter="int"
      default="0"
    />
    <field
      name="sms_status"
      type="hidden"
      filter="string"
      default=""
    />      
  </fieldset>
  <fieldset 
    name="hidden-fields">
    
  </fieldset>
</form>