<?xml version="1.0" encoding="utf-8"?>
<form>
  <fields name="attribs">
    <fieldset name="basic" label="PLG_CONTENT_RATING_SLIDER_LABEL">
      <field 
        name="airport_spacer"
        type="spacer"
        hr="true"
      >
      </field>
        
      <field
        name="latitude"
        type="text"
        id="latitude"
        description=""
        label="Latitude"
        message=""
        class=""
        filter="string"
        required="true"
        labelclass="control-label"
      />
      <field
        name="longitude"
        type="text"
        id="longitude"
        description=""
        label="Longitude"
        message="Please enter longitude under 'Article Options'"
        size="30"
        filter="string"
        required="true"
        labelclass="control-label"
      />
      <field
        name="department"
        type="sql"
        id="department"
        query="select id, title as department from #__classifications where level = 4 order by title"
        description=""
        label="Department"
        message=""
        key_field="id"
        required="true"
        filter="int"
        value_field="department"
        labelclass="control-label"
      />    
      <field
        name="code"
        type="text"
        id="airportcode"
        description=""
        label="Airport Code"
        message=""
        default=""
        required="true"
        class="input-mini"
        maxlength="3"
        filter="string"
        labelclass="control-label"
      />    
      <field
        name="name"
        type="text"
        id="name"
        description=""
        label="Name/Label"
        message=""
        default=""
        required="true"
        class="input"
        maxlength="25"
        filter="string"
        labelclass="control-label"
      />          
    </fieldset>
  </fields>
</form>
