	<version>3.0.0</version>
	<description>MOD_POPULAR_SEARCH_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_search">mod_popular_realestate_search.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>		
    <filename>mod_popular_search.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_popular_realestate_search.ini</language>
		<language tag="en-GB">en-GB.mod_popular_realeatate_search.sys.ini</language>
